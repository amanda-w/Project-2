<h1>My Recipes</h1>

<% recipes.forEach(r => { %>
    <h2><%= r.name %> </h2>
    <p><%= r.description %> </p>
    <img href="<%= r.image %>">
    <a href="/recipes/<%= r.id %>">More info...</a>
    <br>
<% }) %>

